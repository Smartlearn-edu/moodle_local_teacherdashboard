<div class="container-fluid dashboard-container p-0">
    <div class="row g-0">
        <!-- Sidebar -->
        <div class="col-12 col-md-3 min-vh-100 p-0 transform-sidebar" style="background-color: #1a1d21;">
            <div class="smartdashboard-sidebar p-3 sticky-top">
                <div class="text-center mb-4 pt-2">
                     <h4 class="text-white">Dashboard</h4>
                </div>
                <ul class="nav flex-column" id="dashboard-sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" data-target="section-overview">
                            <i class="fa fa-th-large"></i> {{#str}}section_overview, local_smartdashboard{{/str}}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#submenu-progress" aria-expanded="false" data-target="section-progress">
                            <i class="fa fa-users"></i> {{#str}}section_progress, local_smartdashboard{{/str}}
                            <i class="fa fa-chevron-down float-end small mt-1"></i>
                        </a>
                        <div class="collapse" id="submenu-progress">
                            <ul class="nav flex-column ms-3">
                                <li class="nav-item">
                                    <a class="nav-link small" href="#" data-target="section-progress">
                                        <i class="fa fa-th-list me-1"></i> Overview
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link small" href="#" data-target="section-progress-detailed">
                                        <i class="fa fa-user me-1"></i> Detailed
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-target="section-grading">
                            <i class="fa fa-check-square"></i> {{#str}}section_grading, local_smartdashboard{{/str}}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-target="section-analytics">
                            <i class="fa fa-bar-chart"></i> {{#str}}section_analytics, local_smartdashboard{{/str}}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-target="section-payments">
                            <i class="fa fa-money"></i> Payments
                        </a>
                    </li>
                     <li class="nav-item mt-4">
                        <a class="nav-link" href="#" data-target="section-settings">
                            <i class="fa fa-cog"></i> {{#str}}section_settings, local_smartdashboard{{/str}}
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-12 col-md-9 p-4 min-vh-100">
            <!-- Header -->
            <div class="row mb-4 align-items-center">
                <div class="col-12">
                    <h2 class="dashboard-title">{{dashboardtitle}}</h2>
                    <p class="text-muted" id="dashboard-subtitle">Welcome back! Here are the courses you are teaching.</p>
                </div>
            </div>

            <!-- Content Sections -->
            <div id="content-container">
                
                <div id="section-overview" class="dashboard-section">
                    
                    {{#isprivileged}}
                    <div class="card mb-4 border-0 shadow-sm animate__animated animate__fadeIn">
                        <div class="card-body bg-light rounded">
                            <form method="GET" action="">
                                <div class="row align-items-end">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <label class="form-label fw-bold text-muted small text-uppercase">Filter by Category</label>
                                        <select name="categoryid" class="form-select">
                                            <option value="0">Select a category...</option>
                                            {{#categories}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{{name}}}</option>
                                            {{/categories}}
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                         <button type="submit" name="show" value="1" class="btn btn-primary w-100">
                                            <i class="fa fa-filter me-1"></i> Show Courses
                                         </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                   
                    {{#hasstats}}
                    <div class="card mb-4 border-0 shadow-sm animate__animated animate__fadeIn">
                         <div class="card-body">
                            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-bold mb-0 text-primary">
                                        <span id="stat-display-value" class="display-6 fw-bold">{{totalenrollments}}</span>
                                        <span id="stat-display-label" class="fs-5 text-muted ms-2">Total Enrollments</span>
                                    </h5>
                                </div>
                                <div class="mt-3 mt-md-0">
                                    <div class="btn-group" role="group" aria-label="Student Count Options">
                                        <input type="radio" class="btn-check" name="stats-option" id="stat-opt-total" autocomplete="off" checked onclick="document.getElementById('stat-display-value').innerText='{{totalenrollments}}'; document.getElementById('stat-display-label').innerText='Total Enrollments';">
                                        <label class="btn btn-outline-secondary" for="stat-opt-total" title="Sum of students in all courses (includes duplicates)">Direct Sum</label>

                                        <input type="radio" class="btn-check" name="stats-option" id="stat-opt-unique" autocomplete="off" onclick="document.getElementById('stat-display-value').innerText='{{uniquestudents}}'; document.getElementById('stat-display-label').innerText='Unique Students';">
                                        <label class="btn btn-outline-secondary" for="stat-opt-unique" title="Count of unique students (no duplicates)">Unique Students</label>
                                    </div>
                                </div>
                            </div>
                         </div>
                    </div>
                    {{/hasstats}}

                    {{#hassubcategories}}
                    <h5 class="mb-3 text-muted">Subcategories</h5>
                    <div class="row mb-4">
                        {{#subcategories}}
                        <div class="col-md-6 col-lg-4 d-flex align-items-stretch mb-3">
                            <div class="card w-100 border-0 shadow-sm animate__animated animate__fadeIn">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-circle bg-light text-primary me-3">
                                            <i class="fa fa-folder-open fa-lg"></i>
                                        </div>
                                        <h5 class="card-title mb-0 text-truncate" title="{{name}}">
                                            <a href="{{{url}}}" class="text-decoration-none text-dark stretched-link">{{name}}</a>
                                        </h5>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <small class="text-muted"><i class="fa fa-users me-1"></i> {{uniquestudents}} Students</small>
                                        <span class="badge bg-light text-secondary rounded-pill">{{totalenrollments}} Enrollments</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/subcategories}}
                    </div>
                    <h5 class="mb-3 text-muted">Courses</h5>
                    {{/hassubcategories}}

                    {{/isprivileged}}

                    <div class="row course-grid">
                        {{#courses}}
                        <div class="col-md-6 col-xl-4 mb-4">
                            <div class="card h-100 shadow-sm border-0 course-card">
                                <div class="card-img-top-wrapper" style="height: 160px; overflow: hidden; background-color: #f5f5f5; position: relative;">
                                    {{#imageurl}}
                                    <img src="{{imageurl}}" class="card-img-top h-100 w-100 object-fit-cover" alt="{{fullname}}">
                                    {{/imageurl}}
                                    {{^imageurl}}
                                    <div class="d-flex align-items-center justify-content-center h-100 text-secondary">
                                        <i class="fa fa-graduation-cap fa-3x"></i>
                                    </div>
                                    {{/imageurl}}
                                    
                                    <div class="course-category-badge position-absolute top-0 end-0 m-2 badge bg-primary bg-opacity-75">
                                        {{categoryname}}
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-truncate" title="{{fullname}}">
                                        <a href="{{viewurl}}" class="text-decoration-none text-dark stretched-link">{{fullname}}</a>
                                    </h5>
                                    <div class="mt-auto pt-3 d-flex justify-content-between align-items-center">
                                        <span class="text-muted small">
                                            <i class="fa fa-users me-1"></i> {{studentcount}} {{#str}}students, local_smartdashboard{{/str}}
                                        </span>
                                        {{#hasgrading}}
                                        <span class="badge bg-danger rounded-pill" title="{{gradingcount}} {{#str}}needsgrading, local_smartdashboard{{/str}}" style="position: relative; z-index: 2;">
                                            <i class="fa fa-check-square-o me-1"></i> {{gradingcount}}
                                        </span>
                                        {{/hasgrading}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/courses}}
                        {{^courses}}
                        <div class="col-12">
                            {{#isprivileged}}
                                {{^showclicked}}
                                    <div class="alert alert-light border text-center p-5">
                                        <i class="fa fa-search fa-3x text-muted mb-3 op-5"></i>
                                        <h4 class="text-muted">Please select a category and click "Show Courses" to view data.</h4>
                                        <p class="text-muted small">Select a specific category to filter results.</p>
                                    </div>
                                {{/showclicked}}
                                {{#showclicked}}
                                    <div class="alert alert-warning" role="alert">
                                        <i class="fa fa-info-circle me-1"></i> No courses found matching your selection.
                                    </div>
                                {{/showclicked}}
                            {{/isprivileged}}
                            
                            {{^isprivileged}}
                                <div class="alert alert-info" role="alert">
                                    {{#str}}nocourses, local_smartdashboard{{/str}}
                                </div>
                            {{/isprivileged}}
                        </div>
                        {{/courses}}
                    </div>
                </div>

                <!-- Progress Section (Placeholder) -->
                <div id="section-progress" class="dashboard-section d-none">
                    <div class="alert alert-light border">
                        <h4><i class="fa fa-users text-info"></i> {{#str}}section_progress, local_smartdashboard{{/str}}</h4>
                        <p>Student progress analytics will appear here.</p>
                        <!-- We will implement this next -->
                    </div>
                </div>

                <!-- Detailed Progress Section -->
                <div id="section-progress-detailed" class="dashboard-section d-none">
                    <div class="card shadow-sm border-0">
                         <div class="card-body">
                             <h4 class="card-title mb-4"><i class="fa fa-user text-primary me-2"></i>Detailed Student Progress</h4>
                             <div id="detailed-progress-controls" class="row mb-4">
                                 <div class="col-md-6 mb-3">
                                     <label class="form-label">Select Student</label>
                                     <select id="detailed-student-select" class="form-select">
                                         <option value="">Choose a student...</option>
                                     </select>
                                 </div>
                                 <div class="col-md-6 mb-3">
                                     <label class="form-label">Filter Activity Type</label>
                                     <select id="detailed-activity-filter" class="form-select">
                                         <option value="">All Activities</option>
                                         <option value="assign">Assignments</option>
                                         <option value="quiz">Quizzes</option>
                                         <option value="forum">Forums</option>
                                     </select>
                                 </div>
                             </div>
                             <div id="detailed-progress-content">
                                 <p class="text-muted text-center py-5">Select a student to view details.</p>
                             </div>
                         </div>
                    </div>
                </div>

                <!-- Grading Section -->
                <div id="section-grading" class="dashboard-section d-none">
                    <div class="card shadow-sm border-0">
                         <div class="card-body">
                             <h4 class="card-title mb-4"><i class="fa fa-check-square-o text-success me-2"></i>Assignments Needing Grading</h4>
                             <div id="grading-content">
                                 <div class="text-center p-5"><i class="fa fa-spinner fa-spin fa-3x"></i></div>
                             </div>
                         </div>
                    </div>
                </div>

                <!-- Analytics Section (Placeholder) -->
                <div id="section-analytics" class="dashboard-section d-none">
                    {{#isprivileged}}
                    <div class="card shadow-sm border-0 mb-4 animate__animated animate__fadeIn">
                        <div class="card-body">
                            <h4 class="card-title mb-4"><i class="fa fa-bar-chart text-primary me-2"></i> System Analytics</h4>
                            
                            <!-- Key Metrics Row -->
                             <div id="admin-stats-row" class="row mb-5">
                                <div class="col-md-3">
                                    <div class="p-3 border rounded bg-white text-dark text-center h-100 shadow-sm">
                                        <h6 class="text-uppercase small text-muted">Total Students</h6>
                                        <h2 id="total-students-count" class="fw-bold mb-0">-</h2>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 border rounded bg-white text-dark text-center h-100 shadow-sm">
                                        <h6 class="text-uppercase small text-muted">Total Teachers</h6>
                                        <h2 id="total-teachers-count" class="fw-bold mb-0">-</h2>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 border rounded bg-white text-dark text-center h-100 shadow-sm">
                                        <h6 class="text-uppercase small text-muted">Active Courses</h6>
                                        <h2 id="total-courses-count" class="fw-bold mb-0">-</h2>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 border rounded bg-white text-dark text-center h-100 shadow-sm">
                                        <h6 class="text-uppercase small text-muted">Categories</h6>
                                        <h2 id="total-categories-count" class="fw-bold mb-0">-</h2>
                                    </div>
                                </div>
                            </div>

                            <!-- Charts Row -->
                            <div class="row">
                                <div class="col-md-8 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-header bg-white border-0">
                                            <h6 class="fw-bold mb-0">Enrollments per Category</h6>
                                        </div>
                                        <div class="card-body">
                                            <div style="position: relative; height: 300px; width: 100%;">
                                                <canvas id="chart-enrollments-category"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-header bg-white border-0">
                                            <h6 class="fw-bold mb-0">Student vs Teacher Ratio</h6>
                                        </div>
                                        <div class="card-body d-flex align-items-center justify-content-center">
                                            <div style="position: relative; height: 250px; width: 100%;">
                                                <canvas id="chart-user-ratio"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Detailed Table -->
                            <div class="mt-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0">Detailed Category Statistics</h5>
                                    <button id="btn-admin-export" class="btn btn-outline-secondary btn-sm">
                                        <i class="fa fa-download me-1"></i> Export Data
                                    </button>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle" id="admin-analytics-table">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Category</th>
                                                <th class="text-center">Courses</th>
                                                <th class="text-center">Students</th>
                                                <th class="text-center">Teachers</th>
                                                <th class="text-center">Student/Teacher Ratio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Computed Rows -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                    {{/isprivileged}}
                    {{^isprivileged}}
                    <div class="alert alert-light border">
                        <h4><i class="fa fa-bar-chart text-warning"></i> {{#str}}section_analytics, local_smartdashboard{{/str}}</h4>
                        <p>Course analytics will appear here.</p>
                    </div>
                    {{/isprivileged}}
                </div>
                 
                <!-- Payment Analytics Section -->
                <div id="section-payments" class="dashboard-section d-none">
                    <div class="card shadow-sm border-0 mb-4 animate__animated animate__fadeIn">
                        <div class="card-body">
                            <h4 class="card-title mb-4"><i class="fa fa-money text-success me-2"></i> Payment Analytics</h4>
                            
                            <!-- Filters -->
                             <div class="row mb-4 g-2 align-items-end">
                                <!-- Time Range Preset -->
                                <div class="col-md-2">
                                    <label class="form-label small text-muted">Time Range</label>
                                    <select id="payment-filter-time" class="form-select">
                                        <option value="all">All Time</option>
                                        <option value="today">Today</option>
                                        <option value="week">Past 7 Days</option>
                                        <option value="month">Past 30 Days</option>
                                        <option value="year">Past Year</option>
                                        <option value="custom">Custom Range</option>
                                    </select>
                                </div>
                                <!-- Custom Date Range (hidden by default) -->
                                <div class="col-md-2 d-none" id="payment-custom-dates-from">
                                    <label class="form-label small text-muted">From</label>
                                    <input type="date" id="payment-date-from" class="form-control">
                                </div>
                                <div class="col-md-2 d-none" id="payment-custom-dates-to">
                                    <label class="form-label small text-muted">To</label>
                                    <input type="date" id="payment-date-to" class="form-control">
                                </div>
                                <!-- Category Level 1 (Parent) -->
                                <div class="col-md-2">
                                     <label class="form-label small text-muted">Category</label>
                                     <select id="payment-filter-category" class="form-select">
                                         <option value="0">All Categories</option>
                                     </select>
                                </div>
                                <!-- Category Level 2 (Subcategory) -->
                                <div class="col-md-2 d-none" id="payment-subcat-wrapper">
                                     <label class="form-label small text-muted">Subcategory</label>
                                     <select id="payment-filter-subcategory" class="form-select">
                                         <option value="0">All</option>
                                     </select>
                                </div>
                                <!-- Category Level 3 (Sub-subcategory) -->
                                <div class="col-md-2 d-none" id="payment-subsubcat-wrapper">
                                     <label class="form-label small text-muted">Sub-subcategory</label>
                                     <select id="payment-filter-subsubcategory" class="form-select">
                                         <option value="0">All</option>
                                     </select>
                                </div>
                                <!-- Filter Button -->
                                <div class="col-md-2 d-flex align-items-end">
                                    <button id="btn-refresh-payments" class="btn btn-primary w-100">
                                        <i class="fa fa-filter"></i> Filter
                                    </button>
                                </div>
                            </div>

                            <!-- Key Metrics Row -->
                             <div class="row mb-5">
                                <div class="col-md-6">
                                    <div class="p-4 border rounded bg-white text-dark text-center h-100 shadow-sm">
                                        <h6 class="text-uppercase small text-muted">Total Students Enrolled (Paid)</h6>
                                        <h2 id="payment-total-students" class="fw-bold mb-0 text-primary">-</h2>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-4 border rounded bg-white text-dark text-center h-100 shadow-sm">
                                        <h6 class="text-uppercase small text-muted">Total Revenue</h6>
                                        <h2 id="payment-total-revenue" class="fw-bold mb-0 text-success">-</h2>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Charts Row -->
                            <div class="row mb-5">
                                <div class="col-md-6">
                                    <h6 class="fw-bold text-center mb-3">Revenue per Category</h6>
                                    <div style="position: relative; height: 300px; width: 100%;">
                                        <canvas id="chart-payment-revenue"></canvas>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-bold text-center mb-3">Compairson (Students vs Revenue)</h6>
                                    <div style="position: relative; height: 300px; width: 100%;">
                                        <canvas id="chart-payment-students"></canvas>
                                    </div>
                                </div>
                            </div>

                            <!-- Detailed Table -->
                            <div class="mt-4">
                                <h5 class="mb-3">Course Breakdown</h5>
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Course Name</th>
                                                <th>Short Name</th>
                                                <th class="text-center">Paid Enrollments</th>
                                                <th>Payment Breakdown</th>
                                                <th class="text-end">Total Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody id="payment-table-body">
                                            <!-- Computed Rows -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                 <!-- Settings Section -->
                <div id="section-settings" class="dashboard-section d-none">
                    <div class="card shadow-sm border-0 mb-4 animate__animated animate__fadeIn">
                        <div class="card-body">
                            <h4 class="card-title mb-4"><i class="fa fa-cog text-secondary me-2"></i> {{#str}}section_settings, local_smartdashboard{{/str}}</h4>

                            <!-- Payment Calculation Mode -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3"><i class="fa fa-money text-success me-2"></i> Payment Calculation Mode</h5>
                                <p class="text-muted small mb-3">Choose how the payment analytics calculates revenue and student counts.</p>

                                <div class="card border-0 bg-light p-3">
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="radio" name="payment_mode" id="payment-mode-actual" value="actual" checked>
                                        <label class="form-check-label fw-bold" for="payment-mode-actual">
                                            Actual Payments
                                        </label>
                                        <p class="text-muted small mb-0 ms-4">
                                            Uses the <code>{payments}</code> table to count individual payment transactions.
                                            Shows exact amounts paid by each student. Best when your site uses Moodle's built-in payment gateway.
                                        </p>
                                    </div>

                                    <hr class="my-2">

                                    <div class="form-check mt-3">
                                        <input class="form-check-input" type="radio" name="payment_mode" id="payment-mode-estimated" value="estimated">
                                        <label class="form-check-label fw-bold" for="payment-mode-estimated">
                                            Enrollment-Based Estimate
                                        </label>
                                        <p class="text-muted small mb-0 ms-4">
                                            Calculates revenue as <strong>enrolled students Ã— course cost</strong>.
                                            Use this if payments are processed externally or the <code>{payments}</code> table is empty.
                                        </p>

                                        <div class="ms-4 mt-2" id="estimated-options">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="setting-hide-currency" value="1">
                                                <label class="form-check-label small" for="setting-hide-currency">
                                                    Hide currency symbols and equations (show amounts only)
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <button id="btn-save-settings" class="btn btn-primary px-4">
                                    <i class="fa fa-save me-1"></i> Save Settings
                                </button>
                                <span id="settings-save-status" class="ms-3 small text-muted"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

{{#js}}
require(['local_smartdashboard/main'], function(Main) {
    Main.init();
});
{{/js}}


